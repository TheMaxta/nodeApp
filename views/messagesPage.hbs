<div class="div container">
   <br>
   <div class="chip">
                      Author: <img src="{{image}}" alt="">
                      <a href="/posts/user/{{user._id}}">{{name}} {{lastName}} </a></p></div>
    
    <br>
    {{#if inboxType}}
        <H3>Your Inbox:</H1>
    {{else}}
        <H3>Your Sent Messages:</H1>
    {{/if}}    
        <a href="/profile/messages/add_message" class="waves-effect waves-light btn-large" style="
        margin-bottom: 14px;">
                <i class="fas fa-pen-square" style="margin-right: 10px"></i>
                Compose Message
        </a>
    {{#if inboxType}}
        <a href="/profile/messages/sent" class="waves-effect waves-light btn-large" style="
    margin-bottom: 14px; float: right;">
                <i class="fas fa-paper-plane" style="margin-right: 10px;"></i>
                Sent Messages
        </a>
    {{else}}
        <a href="/profile/messages" class="waves-effect waves-light btn-large" style="
    margin-bottom: 14px; float: right;">
                <i class="fas fa-paper-plane" style="margin-right: 10px;"></i>
                Check Inbox
        </a>
    {{/if}}          

    
    <table class="highlight">
        <br>
        <tbody>
                   <!-- This is where you loop for all messages attached to user class-->
            {{#each myInbox}}
                {{#if new}}
                    <tr style="background: #dff4f3">
                {{else}}
                    <tr>
                {{/if}}
                    <td>From: </td>
                    <td>{{sender}}</td>
                    <td>Subject: </td>
                    <td>{{truncate subject 20}}</td>
                    <td>Preview: </td>
                    <td>{{stripTags (truncate body 30)}}</td>

                    <td>
                        <a href="/posts/edit/{{_id}}" class="btn btn-float">
                        {{#if new}}
                            <i class="fas fa-envelope"></i>
                        {{else}}
                            <i class="fas fa-envelope-open"></i>
                        {{/if}}
                        </a>
                    </td>
                </tr>    
            {{else}}
            <p>No messages to display.</p>
            {{/each}}			         
              
        </tbody>
    </table>
<br>
        <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{story.user.displayName}}</span>
                <img src="{{image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/posts/user/{{story.user._id}}">More From {{story.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>

