   <br>
   <div class="chip">
                      Author: <img src="{{image}}" alt="">
                      <a href="/posts/user/{{user._id}}">{{name}} {{lastName}} </a></p></div>
    
    <br>
     <H3>Inbox:</H1>
     <a href="/profile/messages/add_message" class="waves-effect waves-light btn-large"><i class="material-icons right">+</i>Compose Message</a>

    <table class="highlight">
        <tbody>
                   <!-- This is where you loop for all messages attached to user class-->
            {{#each myInbox}}
                <tr>                    
                    <td>Opened? {{new}}</td>
                    <td>From: </td>
                    <td>{{sender}}</td>
                    <td>Subject: </td>
                    <td>{{truncate subject 20}}</td>
                    <td>Preview: </td>
                    <td>{{stripTags (truncate body 30)}}</td>

                    <td>
                        <a href="/posts/edit/{{_id}}" class="btn btn-float">
                        <i class="fas fa-edit"></i>
                        </a>
                    </td>
                </tr>    
            {{else}}
            <p>No messages to display.</p>
            {{/each}}			         
              
        </tbody>
    </table>
<br>
        <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{story.user.displayName}}</span>
                <img src="{{image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/posts/user/{{story.user._id}}">More From {{story.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>

