
<h3>Add Post</h3>
<div class="row">
    <form action="/posts" method="POST" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select id="status" name="status">
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <label>Select Category</label>
            <select name="category" id="category" class="browser-default">
                <option value="General" selected>General</option>
                <option value="Social Discourse">Social Discourse</option>
                <option value="How To">How To</option>
                <option value="Web Design">Web Design</option>
                <option value="Food Reviews">Food Reviews</option>
                <option value="Movie Reviews">Movie Reviews</option>
            </select>
        </div>




        <div class="row">
            <div class="input-field">
                <h5>What would you like to say?:</h5>
                <textarea id="body" name="body"></textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>