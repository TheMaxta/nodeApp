<h3>Edit Post</h3>
<div class="row">
    <form action="/posts/{{post._id}}" method="POST" class="col s12">
    <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title" value="{{post.title}}">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select id="status" name="status">
                    {{#select post.status}}
                    <option value="public" >Public</option>
                    <option value="private">Private</option>
                    {{/select}}

                </select>
                <label for="status">Status</label>
            </div>
        </div>
        


        <div class="row">
            <label>Select Category</label>
            <select name="category" id="category" class="browser-default">
                {{#select post.category}}
                <option value="General">General</option>
                <option value="Social Discourse">Social Discourse</option>
                <option value="How To">How To</option>
                <option value="Web Design">Web Design</option>
                <option value="Food Reviews">Food Reviews</option>
                <option value="Movie Reviews">Movie Reviews</option>
                {{/select}}
            </select>
        </div>


        <div class="row">
            <div class="input-field">
                <h5>Tell Us About You:</h5>
                <textarea id="body" name="body">{{post.body}}</textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>