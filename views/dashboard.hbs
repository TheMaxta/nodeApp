<H3>Dashboard</H1>
<h5>Welcome back, {{name}} {{lastName}}!</h4>
{{#if stories}}
<p>Here are your posts</p>
<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
            
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
            <tr>
                <td><a href="/stories/{{_id}}">{{title}}</a></td>
                <td>{{formatDate createdAt 'MMMM Do YYYY h:mm a'}}</td>
                <td><span class="dash-status">{{status}}</span></td>
                <td>
                    <a href="/stories/edit/{{_id}}" class="btn btn-float">
                    <i class="fas fa-edit"></i>
                    </a>
                <td>
                    <form action="/stories/{{_id}}" method="POST" id="delete-form">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn red" type="submit">
                        <i class="fas fa-trash"></i>
                    </button>
                    </form>
                </td>
                </td>
            </tr>

        {{/each}}
    </tbody>
</table>
{{else }}
<p>There are no stories written yet!</p>
{{/if}}

